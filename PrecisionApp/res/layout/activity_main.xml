<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#007AFF"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:background="#0CA6FF"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Precision Home"
            android:textColor="#fff"
            android:textSize="19sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".9"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20sp" >

        <TextView
            android:id="@+id/btn_new_entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="#fff"
            android:drawableLeft="@drawable/ic_menu_add"
            android:drawableRight="@drawable/ic_arrow"
            android:gravity="center"
            android:padding="5dp"
            android:text="New Entry"
            android:textColor="#0CA6FF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/btn_pending_entries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="#fff"
            android:drawableLeft="@drawable/ic_menu_hourglass"
            android:drawableRight="@drawable/ic_arrow"
            android:gravity="center"
            android:padding="5dp"
            android:text="Pending Entries"
            android:textColor="#0CA6FF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/btn_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="#fff"
            android:drawableLeft="@drawable/ic_menu_history"
            android:drawableRight="@drawable/ic_arrow"
            android:gravity="center"
            android:padding="5dp"
            android:text="History"
            android:textColor="#0CA6FF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/btn_new_time_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="#fff"
            android:drawableLeft="@drawable/ic_menu_stat"
            android:drawableRight="@drawable/ic_arrow"
            android:gravity="center"
            android:padding="5dp"
            android:text="Time Stats"
            android:textColor="#0CA6FF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/btn_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="#fff"
            android:drawableLeft="@drawable/ic_menu_settings"
            android:drawableRight="@drawable/ic_arrow"
            android:gravity="center"
            android:padding="5dp"
            android:text="Settings"
            android:textColor="#0CA6FF"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>